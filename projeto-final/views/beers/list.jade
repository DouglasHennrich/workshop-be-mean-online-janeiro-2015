h2 Listagem das cervejas
h3 {{ error }}

table
  thead
    tr
      th Name
      th Price
      th Alterar
      th Excluir
  tbody
    tr(data-ng-repeat='beer in beers')
      td {{ beer.name }}
      td {{ beer.price | currency:"R$ " }}
      td 
        a(data-ng-href='beers/{{ beer._id }}/edit') Editar
      td 
          button(data-ng-click='delete(beer)') EXCLUIR

